{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "**/__tests__/*",
    "**/setupTest.ts"
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules"
    ]
  }
}