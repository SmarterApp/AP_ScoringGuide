{
    "compilerOptions": {
        "target": "es2017",
        "outDir": "../../dist/server",
        "module": "commonjs",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noEmitOnError": false,
        "removeComments": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "es5",
            "es6",
            "dom"
          ],
        "types": [
            "jest"
        ],
        "typeRoots": [
        "./node_modules/@types"
        ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "wwwroot",
        "**/*.test.*"
    ]
}
